
<table class = "table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tr>
      <th>Id</th>
      <th>Titulo</th>
      <th>Fecha creación</th>
      <th>Fecha Actualización</th>
      <th>URL Imagen</th>
      <th>Commentario</th>
    </tr>
  <tbody>
    <% @posts.each do |post| %>
        <tr>
            <td><%= post.id%></td>
            <td><%= post.title%></td>
            <td><%= post.created_at%></td>
            <td><%= post.updated_at%></td>
            <td><%= post.image_url%></td>
            <td><%= post.content%></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path %>