
<form method="post" action="/posts" id="create_post">
  <h2>Titulo</h2>
  <input name="title">
  <h2> Imagen URL </h2>
  <input name="image_url">
  <h2> Contenido </h2>
  <textarea name="content"></textarea>
  <input type="submit" value="Enviar">
  <div class="container mt-5">
    <% if @post.errors.any? %>
      <div id ="error_explanation" >
          <h4>
              <%= pluralize(@post.errors.count, "errores") %>
              no permiten que se cree tu post:
          </h4>
          <ul>
              <% @post.errors.full_messages.each do |msg|%>
              <li><%= msg %></li>
              <% end %>
          </ul>
    </div>  
    <% end %>
  </div>
</form>